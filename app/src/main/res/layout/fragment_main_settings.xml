<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/settings_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/new_game_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/settings_menu">

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/themes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/previous_games"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/about_menu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_buttons"/>

    <LinearLayout
        android:id="@+id/about_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/about_menu_text">

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/play_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
