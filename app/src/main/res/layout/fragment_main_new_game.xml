<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/new_game_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:dividerPadding="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/new_game">

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/continue_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/beginner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/intermediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/expert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/custom"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <dev.lucasnlm.antimine.main.view.CardButtonView
            android:id="@+id/tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/general"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_game_buttons"/>

    <dev.lucasnlm.antimine.main.view.CardButtonView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/general"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <dev.lucasnlm.antimine.main.view.CardButtonView
        android:id="@+id/remove_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>